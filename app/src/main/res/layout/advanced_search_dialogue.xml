<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16sp">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:nextFocusDown="@+id/editTextLocation"
            android:nextFocusForward="@+id/editTextLocation"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:hint="Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextLocation"
            android:maxLines="1"
            android:nextFocusDown="@+id/editTextDivision"
            android:nextFocusForward="@+id/editTextDivision"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Division"
            android:maxLines="1"
            android:nextFocusDown="@+id/editTextDepartment"
            android:nextFocusForward="@+id/editTextDepartment"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextDepartment"
            android:maxLines="1"
            android:nextFocusDown="@+id/editTextDesignation"
            android:nextFocusForward="@+id/editTextDesignation"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextDesignation"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:nextFocusDown="@+id/searchButton"
            android:nextFocusForward="@+id/searchButton"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:hint="Designation" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp">

        <Button
            android:id="@+id/searchButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:text="Search"
            android:textAlignment="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5sp"
            android:background="#22222222"
            android:padding="16sp" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@color/indicator_red"
            android:text="Clear"
            android:textAlignment="center" />
    </LinearLayout>

</LinearLayout>