<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".UserInfoActivity"
    tools:showIn="@layout/activity_user_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/bg_placeholder" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#22222222"
            android:padding="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/phoneLayout"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="8sp">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Call" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/messageLayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="8sp">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailLayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="8sp">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Email" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whatsappLayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:padding="8sp">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_phone_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Phone" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#22222222"
            android:padding="16sp" />

        <LinearLayout
            android:id="@+id/phoneno_1Layout"
            android:onClick="callFunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="16sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_phone_black" />

            <TextView
                android:id="@+id/phoneno_1TextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="left"
                android:text="1234567890"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/message_1ImageView"
                android:layout_weight="0.2"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="messageFunction"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_message" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneno_2Layout"
            android:onClick="callFunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="16sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_phone_black" />

            <TextView
                android:id="@+id/phoneno_2TextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="left"
                android:text="1234567890"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/message_2ImageView"
                android:background="?attr/selectableItemBackground"
                android:layout_weight="0.2"
                android:layout_width="0sp"
                android:clickable="true"
                android:onClick="messageFunction"
                android:layout_height="40sp"
                android:src="@drawable/ic_message" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneno_3Layout"
            android:onClick="callFunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="16sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_phone_black" />

            <TextView
                android:id="@+id/phoneno_3TextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="left"
                android:text="1234567890"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/message_3ImageView"
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="0.2"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="messageFunction"
                android:src="@drawable/ic_message" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#22222222"
            android:padding="16sp" />

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/email_1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="0.15"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/email_1TextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:text="singh.gagandeep3911@gmail.com"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:id="@+id/email_2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16sp">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="40sp"
                android:layout_weight="0.15"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/email_2TextView"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:text="singh.gagandeep3911@gmail.com"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#22222222"
            android:padding="16sp" />

    </LinearLayout>
</ScrollView>