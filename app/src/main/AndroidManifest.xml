<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gagandeep.nuvococontacts">

    <application
        android:name=".FirebaseHandler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ChangelogActivity"
            android:parentActivityName=".ChangelogActivity"></activity>
        <activity
            android:name=".VerifyPhoneActivity"
            android:parentActivityName=".LoginActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddUserActivity"
            android:label="@string/title_activity_add_user"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gagandeep.nuvococontacts.MainActivity" />
        </activity>
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gagandeep.nuvococontacts.MainActivity" />
        </activity>
        <activity
            android:windowSoftInputMode="adjustResize"
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>